// Place your settings in this file to overwrite the default settings
{
    "workbench.editor.tabCloseButton": "left",
    "workbench.editor.showIcons": true,
    
    "telemetry.enableTelemetry": false,

    "window.zoomLevel": 0.2,
    
    "editor.rulers": [
        80, 120
    ],
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "none",
    "editor.wordWrapColumn": 120,

    "editor.mouseWheelScrollSensitivity": 2,
    "editor.tabCompletion": true,
    "explorer.openEditors.visible": 0,
    "search.quickOpen.includeSymbols": true,

    "files.encoding": "utf8",

    "git.confirmSync": true,

    "extensions.autoUpdate": true,

    "debug.inlineValues": true,
    "workbench.iconTheme": "vscode-icons",
    "explorer.autoReveal": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "workbench.activityBar.visible": true,
    "workbench.editor.showTabs": false,
    "font-switcher.enableLivePreview": true,
    "font-switcher.fontFamily": "Andale Mono, Anonymous Pro for Powerline, Apple Color Emoji, Courier New, Cousine for Powerline, DejaVu Sans Mono, DejaVu Sans Mono for Powerline, Droid Sans Mono Dotted for Powerline, Droid Sans Mono Slashed for Powerline, Droid Sans Mono for Powerline, Fira Mono for Powerline, GB18030 Bitmap, Go Mono for Powerline, Hack, IBM 3270, IBM 3270 Narrow, IBM 3270 Semi\\-Narrow, Inconsolata for Powerline, Inconsolata\\-dz for Powerline, Inconsolata\\-g for Powerline, Liberation Mono, Liberation Mono for Powerline, Menlo, Meslo LG L DZ for Powerline, Meslo LG L for Powerline, Meslo LG M DZ for Powerline, Meslo LG M for Powerline, Meslo LG S DZ for Powerline, Meslo LG S for Powerline, Noto Mono for Powerline, NovaMono for Powerline, PT Mono, ProFont for Powerline, Source Code Pro for Powerline, Source Code Pro for Powerline, Source Code Pro for Powerline, Source Code Pro for Powerline, Source Code Pro for Powerline, Source Code Pro for Powerline, Source Code Variable, Space Mono, Space Mono for Powerline, Ubuntu Mono derivative Powerline, monofur for Powerline",
    "editor.fontFamily": "Noto Mono for Powerline"
