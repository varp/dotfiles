// Place your settings in this file to overwrite the default settings
{
    // 
    // debug
    //
    "debug.inlineValues": "on",
    "debug.openExplorerOnEnd": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.showSubSessionsInToolBar": true,
    "debug.console.acceptSuggestionOnEnter": "on",
    "debug.toolBarLocation": "docked",
    // 
    // editor
    //
    "editor.bracketPairColorization.enabled": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.fontLigatures": true,
    "editor.fontWeight": "400",
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
    "editor.largeFileOptimizations": true,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": true,
    "editor.find.autoFindInSelection": "multiline",
    "editor.rulers": [
        120
    ],
    "editor.smoothScrolling": true,
    "editor.suggest.localityBonus": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordWrapColumn": 120,
    "explorer.openEditors.visible": 16,
    "editor.stickyTabStops": true,
    "editor.stickyScroll.maxLineCount": 3,
    "editor.guides.indentation": false,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.hover.delay": 500,
    "editor.find.globalFindClipboard": true,
    "editor.scrollbar.horizontal": "visible",
    "editor.parameterHints.cycle": false,
    "editor.tokenColorCustomizations": {
        "[*Light*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#000"
                    }
                }
            ]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                }
            ]
        },
        "textMateRules": [
            {
                "name": "One Dark italic",
                "scope": [
                    "comment",
                    "entity.other.attribute-name",
                    "keyword",
                    "markup.underline.link",
                    "storage.modifier",
                    "storage.type",
                    "string.url",
                    "variable.language.super",
                    "variable.language.this"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "name": "One Dark italic reset",
                "scope": [
                    "keyword.operator",
                    "keyword.other.type",
                    "storage.modifier.import",
                    "storage.modifier.package",
                    "storage.type.built-in",
                    "storage.type.function.arrow",
                    "storage.type.generic",
                    "storage.type.java",
                    "storage.type.primitive"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.linkedEditing": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.inlineSuggest.showToolbar": "always",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.preview": true,
    "editor.accessibilitySupport": "off",
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "editor.inlineSuggest.syntaxHighlightingEnabled": true,
    // for catppuccin theme: we try to make semantic highlighting look good
    "editor.semanticHighlighting.enabled": false,
    //
    // workbench
    //
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.iconTheme": "catppuccin-frappe",
    "workbench.list.openMode": "singleClick",
    "workbench.preferredDarkColorTheme": "Catppuccin Frapp√©",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "One Dark",
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.tree.indent": 10,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.limit.value": 16,
    "workbench.list.scrollByPage": true,
    "workbench.hover.delay": 700,
    "workbench.commandPalette.preserveInput": true,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "workbench.editorLargeFileConfirmation": 250,
    "workbench.settings.useSplitJSON": true,
    "workbench.localHistory.maxFileSize": 1024,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.titleScrollbarSizing": "large",
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.tabActionLocation": "left",
    "workbench.list.defaultFindMode": "filter",
    "workbench.editor.enablePreview": false,
    "workbench.activityBar.location": "top",
    //
    // files
    //
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    //
    // git
    //
    "git.autofetch": true,
    "git.autoRepositoryDetection": "subFolders",
    "git.autoStash": true,
    "git.confirmSync": false,
    "git.showPushSuccessNotification": true,
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command",
        "tag-create:command"
    ],
    "gitlens.views.repositories.files.layout": "tree",
    "gitlens.telemetry.enabled": false,
    "gitHistory.showEditorTitleMenuBarIcons": true,
    "gitlens.plusFeatures.enabled": false,
    "git.mergeEditor": true,
    "gitlens.menus": {
        "workbench.editor.highlightModifiedTabs": true,
        "editor": {
            "blame": true,
            "clipboard": true,
            "compare": true,
            "history": false,
            "remote": false
        },
        "editorGroup": {
            "blame": false,
            "compare": true
        },
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "ghpr": {
            "worktree": true
        },
        "scm": {
            "graph": true
        },
        "scmRepositoryInline": {
            "graph": true
        },
        "scmRepository": {
            "authors": true,
            "generateCommitMessage": true,
            "graph": false
        },
        "scmGroupInline": {
            "stash": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true
        },
        "scmItemInline": {},
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": false,
            "stash": true
        }
    },
    "git.enableSmartCommit": true,
    "diffEditor.codeLens": true,
    "diffEditor.wordWrap": "on",
    "scm.countBadge": "focused",
    "scm.diffDecorations": "gutter",
    "scm.defaultViewMode": "tree",
    //
    // terminal
    //
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "JetBrainsMonoNL Nerd Font Mono",
    "terminal.integrated.profiles.osx": {
        "bash": {
            "args": [
                "-l"
            ],
            "icon": "terminal-bash",
            "path": "bash"
        },
        "bash 5": {
            "args": [
                "-l"
            ],
            "path": "/usr/local/bin/bash"
        },
        "fish": {
            "args": [
                "-l"
            ],
            "path": "fish"
        },
        "pwsh": {
            "icon": "terminal-powershell",
            "path": "pwsh"
        },
        "tmux": {
            "icon": "terminal-tmux",
            "path": "tmux"
        },
        "zsh": {
            "args": [
                "-l"
            ],
            "path": "zsh"
        }
    },
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.tabStopWidth": 4,
    "terminal.integrated.fontSize": 14,
    // for catppuccin theme: prevent VSCode from modifying the terminal colors
    "terminal.integrated.minimumContrastRatio": 1,
    //
    // window
    //
    "window.autoDetectColorScheme": true,
    "window.newWindowDimensions": "offset",
    "window.openFilesInNewWindow": "off",
    // for catppuccin theme: make the window's titlebar use the workbench colors
    "window.titleBarStyle": "custom",
    //
    // search
    //
    "search.actionsPosition": "auto",
    "search.seedWithNearestWord": true,
    "search.decorations.badges": true,
    "search.quickOpen.includeSymbols": true,
    "search.useGlobalIgnoreFiles": true,
    // 
    // explorer
    //
    "explorer.fileNesting.enabled": true,
    "explorer.autoReveal": "focusNoScroll",
    "outline.collapseItems": "alwaysCollapse",
    "vsicons.dontShowNewVersionMessage": true,
    "zenMode.silentNotifications": false,
    "errorLens.messageBackgroundMode": "message",
    "problems.showCurrentInStatus": true,
    //
    // extensions
    //
    "cSpell.language": "en,ru",
    "material-icon-theme.activeIconPack": "react_redux",
    "oneDarkPro.vivid": true,
    "extensions.closeExtensionDetailsOnViewChange": true,
    "excalidraw.theme": "auto",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false
    },
    "vscode_custom_css.imports": [
        "file://${userHome}/.config/vscode-styles.css"
    ],
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path-mac": "/Users/vardan.pogosyan/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "yaml.maxItemsComputed": 10000,
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "code-runner.fileDirectoryAsCwd": true,
    "docker.containers.description": [
        "ContainerName",
        "Status",
        "Ports",
        "CreatedTime"
    ],
    // 
    // Go
    //
    "go.toolsManagement.autoUpdate": true,
    "gopls": {
        "ui.diagnostic.staticcheck": true,
        "ui.semanticTokens": true,
        "ui.documentation.linksInHover": true,
        "ui.diagnostic.analyses": {
            "unusedparams": true,
            "nilness": true,
            "shadow": true
        },
    },
    "go.coverOnSave": true,
    "go.coverOnTestPackage": true,
    "go.coverShowCounts": true,
    "go.coverOnSingleTestFile": true,
    "go.coverageDecorator": {
        "type": "gutter",
    },
    "go.coverageOptions": "showBothCoveredAndUncoveredCode",
    "go.testFlags": [
        "-cover",
        "-count=1"
    ],
    "go.testEnvVars": {
        "GOLANG_PROTOBUF_REGISTRATION_CONFLICT": "warn"
    },
    "redhat.telemetry.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "gitPrefix.pattern": ".*/(.*)",
    "docker.lsp.telemetry": "off",
    "containers.containers.description": [
        "ContainerName",
        "Status",
        "Ports",
        "CreatedTime"
    ]
}