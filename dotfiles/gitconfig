  ss        = log --pretty=format:'%Cgreen%h%Creset %Cblue[%ci]%Creset - %C(yellow)%d%Creset | %s - %C(bold blue)<%an>%Creset' --abbrev-commit
  up        = pull --rebase
  track     = !git-track
  prune-all = !git-prune-all
