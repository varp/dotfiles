  tool = phpstorm

[apply]
  whitespace = nowarn

[core]
  editor = vim
	autocrlf = input
  eol = lf
	excludesfile = /Users/vardanpro/.gitignore_global

[alias]
  co        = checkout
  ct        = checkout -t
  ci        = commit -v
  ca        = commit -av
  st        = status -sb
  sl        = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ss        = log --pretty=format:'%Cgreen%h%Creset %Cblue[%ci]%Creset - %C(yellow)%d%Creset | %s - %C(bold blue)<%an>%Creset' --abbrev-commit
  up        = pull --rebase
  track     = !git-track
  prune-all = !git-prune-all
  sync      = !git pull && git push
  r         = remote -v
  b         = branch -v
  rh        = reset --hard

[apply]
  whitespace = nowarn

[color]
  ui     = true
  branch = auto
  diff   = auto
  status = auto

[push]
  default = tracking

[gc]
  auto = 1

[diff]
  tool = meld
  guitool = meld

[difftool]
  prompt = no
[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/

[diff]
	tool = phpstorm

[difftool]
; This setting is optional, but prevents an annoying prompt between diffing files.
	prompt = false


[difftool "phpstorm"]
; Putting this path here doesn't work. I would love to know why.
	cmd = /usr/local/bin/phpstorm diff $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE")
	trustExitCode = true

[mergetool "phpstorm"]
	cmd = /usr/local/bin/phpstorm merge $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE") $(cd $(dirname "$BASE") && pwd)/$(basename "$BASE") $(cd $(dirname "$MERGED") && pwd)/$(basename "$MERGED")
	trustExitCode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
