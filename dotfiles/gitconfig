[user]
	name = Vardan Pogosian
	email = vardan.pogosyan@gmail.com

[github]
  user = varp

[merge]
  branchdesc = true
  tool = phpstorm

[apply]
  whitespace = nowarn

[core]
  editor = vim
	autocrlf = input
  eol = lf
	excludesfile = /Users/vardanpro/.gitignore_global

[alias]
  co        = checkout
  ct        = checkout -t
  ci        = commit -v
  ca        = commit -av
  st        = status -sb
  sl        = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ss        = log --pretty=format:'%Cgreen%h%Creset %Cblue[%ci]%Creset - %C(yellow)%d%Creset | %s - %C(bold blue)<%an>%Creset' --abbrev-commit
  up        = pull --rebase
  track     = !git-track
  prune-all = !git-prune-all
  sync      = !git pull && git push
  r         = remote -v
  b         = branch -v
  rh        = reset --hard

[apply]
  whitespace = nowarn

[color]
  ui     = true
  branch = auto
  diff   = auto
  status = auto

[push]
  default = tracking

[gc]
  auto = 1


[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/

[diff]
	tool = phpstorm
	guitool = phpstorm

[difftool "phpstorm"]
	cmd = phpstorm -n -W --args diff "$LOCAL" $(realpath "$REMOTE")
	trustExitCode = false

[difftool]
	prompt = false

[merge]
	tool = phpstorm
	guitool = phpstorm

[mergetool "phpstorm"]
	cmd = phpstorm -n -W --args merge $(realpath "$LOCAL") $(realpath "$REMOTE") $(realpath "$MERGED")
	trustExitCode = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
