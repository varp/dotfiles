Host *
    HostName %h
    ControlMaster auto
    ControlPath ~/.ssh/control_%r@%h:%p
    ControlPersist 10m
    ServerAliveInterval 60
    ServerAliveCountMax  120

    # RemoteCommand [[ -d ~/SshShared ]] || mkdir ~/SshShared

    # LocalCommand sftp -S ~/SshShared -b ~/.ssh/sftp-init %r@%h:~/SshShared